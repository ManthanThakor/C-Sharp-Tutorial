@using ProductManageMvc.Models.Entity
@model ProductManageMvc.Models.Entity.Product

@{
    ViewData["Title"] = Model.Id == 0 ? "Create Product" : "Edit Product";
}

<div class="mt-5 container">
    <div class="card rounded-lg border-0 shadow-lg">
        <div class="card-header bg-primary text-white">
            <h3 class="text-center">@ViewData["Title"]</h3>
        </div>
        <div class="card-body">
            <form asp-action="CreateOrEdit" method="post">
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label class="form-label fw-bold">Product Name</label>
                    <input type="text" class="form-control" asp-for="Name" placeholder="Enter product name" required />
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Price</label>
                    <input type="number" class="form-control" asp-for="Price" step="0.01" min="0.01" placeholder="Enter price" required />
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Category</label>
                    <select class="form-select" asp-for="CategoryId" asp-items="@(new SelectList(ViewData["Categories"] as List<ProductCategory>, "Id", "Name"))" required>
                        <option value="">-- Select a category --</option>
                    </select>
                </div>

                <div class="d-flex justify-content-center mt-4">
                    <button type="submit" class="btn btn-success px-4 me-2">
                        <i class="fas fa-save"></i> Save
                    </button>
                    <a href="@Url.Action("Index")" class="btn btn-secondary px-4">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>


