@model IEnumerable<ProductManageMvc.Models.Entity.Product>

@{
    ViewData["Title"] = "Products";
}

<h1>Products</h1>

<a asp-action="CreateOrEdit" class="btn btn-success mb-3">Add New Product</a>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Category</th>
            <th colspan="2">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Price</td>
                <td>@product.Category?.Name</td>
                <td>
                    <a asp-action="CreateOrEdit" asp-route-id="@product.Id" class="btn btn-primary">Edit</a>
                </td>
                <td>
                    <form asp-action="Delete" asp-route-id="@product.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this product?');">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
