@page
@model LogoutModel
@{
    ViewData["Title"] = "Log out";
}

<div class="logout-container">
    <div class="logout-card">
        <h2 class="mb-4">@ViewData["Title"]</h2>

        @if (User.Identity?.IsAuthenticated ?? false)
        {
            <p>Are you sure you want to log out?</p>
            <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="btn btn-logout">Click here to Logout</button>
            </form>
        }
        else
        {
            <p class="success-text">You have successfully logged out of the application.</p>
            <a href="/" class="btn btn-logout mt-3">Go to Home</a>
        }
    </div>
</div>
<link href="~/css/logout.css" rel="stylesheet" />