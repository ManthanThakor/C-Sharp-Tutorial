@model CRUDDemo.Models.Employee

@{
    ViewBag.Title = "Delete Employee";
}

<div class="mt-4 container">
    <h2 class="text-center">Delete Employee</h2>

    <h4>Are you sure you want to delete this employee?</h4>
    <hr />

    <div>
        <strong>Name:</strong> @Model.Name <br />
        <strong>Email:</strong> @Model.Email <br />
        <strong>Phone:</strong> @Model.Phone <br />
        <strong>Address:</strong> @Model.Address <br />
    </div>

    <br />

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-danger">Delete</button>
        <a href="@Url.Action("Index", "Employees")" class="btn btn-secondary">Cancel</a>
    }
</div>
