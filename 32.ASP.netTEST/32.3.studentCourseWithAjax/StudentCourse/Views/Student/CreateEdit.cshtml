@model Student

<form id="createEditStudentForm">
    <input type="hidden" id="studentId" value="@Model.Id">
    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" class="form-control" id="name" value="@Model.Name" placeholder="Enter name">
    </div>
    <div class="form-group">
        <label for="email">Email</label>
        <input type="email" class="form-control" id="email" value="@Model.Email" placeholder="Enter email">
    </div>
    <div class="form-group">
        <label for="dob">Date of Birth</label>
        <input type="date" class="form-control" id="dob" value="@Model.DateOfBirth.ToString("yyyy-MM-dd")">
    </div>
</form>
