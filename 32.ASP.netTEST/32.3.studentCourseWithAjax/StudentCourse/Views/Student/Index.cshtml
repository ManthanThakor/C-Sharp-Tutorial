@{
    ViewData["Title"] = "Student Management";
}

<!-- Button to Open Modal for Creating Student -->
<button class="btn btn-primary" data-toggle="modal" data-target="#createEditStudentModal" onclick="openCreateEditModal()">Create Student</button>

<!-- Modal Structure for Create/Edit Student -->
<div class="modal fade" id="createEditStudentModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Create / Edit Student</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="modalBody">
                <!-- The form will be loaded here dynamically -->
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" onclick="saveStudent()">Save Changes</button>
            </div>
        </div>
    </div>
</div>

<!-- Table to display students -->
<table id="studentTable" class="table-striped table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Date of Birth</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    // On page load, load students
    $(document).ready(function () {
        loadStudents();
    });

    // Function to load all students from the server
    function loadStudents() {
        $.get("/Student/GetStudents", function (data) {
            $("#studentTable tbody").empty();  // Clear the existing table body
            if (data.length > 0) {
                data.forEach(function (student) {
                    $("#studentTable tbody").append(`
                                                        <tr>
                                                            <td>${student.name}</td>
                                                            <td>${student.email}</td>
                                                            <td>${student.dateOfBirth}</td>
                                                            <td>
                                                                <button onclick="openCreateEditModal(${student.id})">Edit</button>
                                                                <button onclick="deleteStudent(${student.id})">Delete</button>
                                                            </td>
                                                        </tr>
                                                    `);
                });
            } else {
                $("#studentTable tbody").append("<tr><td colspan='4'>No records found</td></tr>");
            }
        });
    }

    // Function to open the Create/Edit modal
    function openCreateEditModal(id = null) {
        $.get(`/Student/CreateEdit?id=${id}`, function (data) {
            $("#modalBody").html(data);
            $("#createEditStudentModal").modal("show");
        });
    }

    // Function to save the student (Create or Edit)
    function saveStudent() {
        var student = {
            Id: $("#studentId").val(),
            Name: $("#name").val(),
            Email: $("#email").val(),
            DateOfBirth: $("#dob").val()
        };

        $.ajax({
            type: "POST",
            url: "/Student/CreateEdit",
            contentType: "application/json",
            data: JSON.stringify(student),
            success: function (response) {
                alert(response.message);
                if (response.success) {
                    $('#createEditStudentModal').modal('hide');
                    loadStudents(); // Reload student data after creation or edit
                }
            }
        });
    }

    // Function to delete a student
    function deleteStudent(id) {
        $.ajax({
            type: "POST",
            url: "/Student/Delete",
            contentType: "application/json",
            data: JSON.stringify(id),
            success: function (response) {
                alert(response.message);
                loadStudents(); // Reload student data after deletion
            }
        });
    }
</script>
