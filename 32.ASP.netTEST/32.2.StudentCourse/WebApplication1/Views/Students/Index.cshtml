    @model IEnumerable<WebApplication1.Models.Student>

    @{
        ViewData["Title"] = "Students";
    }

    <h1>Students</h1>

    <p>
        <a href="@Url.Action("CreateOrEdit", "Students")" class="btn btn-primary">Create New Student</a>
    </p>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model)
            {
                <tr>
                    <td>@student.Name</td>
                    <td>@student.Email</td>
                    <td>
                        <a href="@Url.Action("Details", "Students", new { id = student.Id })" class="btn btn-info">Details</a>
                        <a href="@Url.Action("CreateOrEdit", "Students", new { id = student.Id })" class="btn btn-warning">Edit</a>
                        <a href="@Url.Action("Delete", "Students", new { id = student.Id })" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this student?');">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
