@model IEnumerable<WebApplication1.Models.Course>

@{
    ViewData["Title"] = "Courses";
}

<h1>Courses</h1>

<p>
    <a href="@Url.Action("CreateOrEdit", "Courses")" class="btn btn-primary">Create New Course</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model)
        {
            <tr>
                <td>@course.Title</td>
                <td>@course.Description</td>
                <td>
                    <a href="@Url.Action("Details", "Courses", new { id = course.Id })" class="btn btn-info">Details</a>
                    <a href="@Url.Action("CreateOrEdit", "Courses", new { id = course.Id })" class="btn btn-warning">Edit</a>
                    <a href="@Url.Action("Delete", "Courses", new { id = course.Id })" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this course?');">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
