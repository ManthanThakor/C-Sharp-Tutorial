@model IEnumerable<WebApplication1.Models.Course>

@{
    ViewData["Title"] = "Courses";
}

<h1>Courses</h1>

<p>
    <a href="@Url.Action("CreateOrEdit", "Courses")" class="btn btn-primary">Create New Course</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Course Title</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model)
        {
            <tr>
                <td>@course.Title</td>
                <td>
                    <a href="@Url.Action("Details", "Courses", new { id = course.Id })" class="btn btn-info">Details</a>
                    <a href="@Url.Action("CreateOrEdit", "Courses", new { id = course.Id })" class="btn btn-warning">Edit</a>

                    <form method="post" asp-action="DeleteConfirmed" asp-route-id="@course.Id" style="display:inline;">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
